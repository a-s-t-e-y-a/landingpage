const features = [
    "Estimates & Sales Orders",
    "Automated Email Reminders",
    "Payment Gateway Integrations",
    "Mult-user, Multi-currency system",
    "In-depth Sales Reports"
];

const testimonials = [
    {
        image: "/testimonial-us-01-1.png",
        name: "Ankush P.",
        position: "Systems Engineer",
        company: "CEO, HIA, Inc",
        testimonial: "Very Satisfied! Very convenient to make customer invoices and apply taxes as needed. Invoices are the Key. Easy Creation, modification, and Generation."
    },
    {
        image: "/testimonial-us-02-1.png",
        name: "Balaji I.",
        position: "Founder & CEO",
        company: "CEO, HIA, Inc",
        testimonial: "Trigon saves lots of time and dollars for me. My experience with Trigon is as excellent as walking on a piece of cake."
    }
];

const paymentFeatures = [
    {
        icon: "üîç",
        title: "Track Your Receivables",
        description: "Keep tabs on what your customers owe you with real-time tracking of receivables. Trigon helps you stay organized, ensuring you never miss a payment."
    },
    {
        icon: "üí∏",
        title: "Receive Online Payments",
        description: "Make it easy for your clients to pay you with secure online payment options. A payment link is sent with the invoice, and the money is deposited directly into your account, speeding up your cash flow with Trigon."
    }
];

const customizationFeatures = [
    {
        icon: "üìã",
        title: "Add custom fields",
        description: "You can capture additional details like vehicle number, sales person name, etc using custom fields."
    },
    {
        icon: "üìë",
        title: "Choose from pre-designed templates",
        description: "We have carefully added various invoice templates according to the industry type. Upload your company logo, show/hide items or change columns names."
    }
];

const automationFeatures = [
    {
        icon: "üìÖ",
        title: "Automated Invoice Reminders",
        description: "Ensure you get paid on time with automated invoice reminders sent directly to your clients. ProfitBooks takes the hassle out of follow-ups, so you can focus on growing your business."
    },
    {
        icon: "üîê",
        title: "Customer Portal",
        description: "Give clients access to their own portal for viewing and managing invoices. They can check billing details, payment history, and make secure payments, enhancing their experience and streamlining communication."
    }
];

const videoFeatures = [
    {
        icon: "üë•",
        title: "Create Multiple Users",
        description: "You can add multiple users and even assign them specific roles. For example, an employee with 'sales' role can only access the invoicing function."
    },
    {
