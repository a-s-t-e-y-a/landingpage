---
import FAQ from "../components/FAQSection";
import AccountingFeature from "../components/AccountingFeature";
import Navbar from "../components/navbar";
import FullFooterPage from "../components/subComponents/fullFooterPage";
import "../styles/global.css";

interface Props {
	title: string;
	showNavbar?: boolean;
	showAccountingFeature?: boolean;
	showFooter?: boolean;
}

const {
	title,
	showNavbar = true,
	showAccountingFeature = true,
	showFooter = true
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>	
		{showNavbar && <Navbar />}
		{showAccountingFeature && <AccountingFeature />}
		<slot />
		{showFooter && <FullFooterPage client:load/>}
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
